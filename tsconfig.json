{
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true
  }
}
